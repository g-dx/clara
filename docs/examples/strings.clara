// Entry point
fn main() {
  "Clara & Gary!".printChars(0)
}

fn printChars(s: string, pos: int) {
    if pos == s.length {
        printf("\n")
        return
    } elseif pos == 0 {
        printf("'%s' = ", s)
    } else {
        printf(", ")
    }
    printf("'%c'", s[pos])
    printChars(s, pos + 1)
}