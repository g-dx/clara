fn main() {

    // Zero
    println(0 + 0 + 0 + 0) // EXPECT: 0
    println(0 - 0 - 0 - 0) // EXPECT: 0
    println(0 * 0 * 0 * 0) // EXPECT: 0
    println(0 / 1 / 1 / 1) // EXPECT: 0
    println(-0 + -0 + -0 + -0) // EXPECT: 0
    println(-0 - -0 - -0 - -0) // EXPECT: 0
    println(-0 * -0 * -0 * -0) // EXPECT: 0
    println(-0 / -1 / -1 / -1) // EXPECT: 0

    // Comparisons
    println(1 > 1)   // EXPECT: false
    println(1 < 1)   // EXPECT: false
    println(1 == 0)  // EXPECT: false
    println(1 == 1)  // EXPECT: true
    println(2 > 1)   // EXPECT: true
    println(1 < 2)   // EXPECT: true
    println(1 > -1)  // EXPECT: true
    println(-1 < 1)  // EXPECT: true
    println(-1 < 1)  // EXPECT: true
    println(2 <= 1)  // EXPECT: false
    println(1 <= 1)  // EXPECT: true
    println(0 <= 1)  // EXPECT: true
    println(1 >= 2)  // EXPECT: false
    println(2 >= 2)  // EXPECT: true
    println(3 >= 2)  // EXPECT: true

    println(-1 > 1 or 2 > 1)  // EXPECT: true
    println(-1 > 1 or 1 > 1)  // EXPECT: false
    println(-1 > 1 or 2 > 1 and true)  // EXPECT: true

    // Basic
    println(1 + 2 + 3 + 4)      // EXPECT: 10
    println(10 - 4 - 3 - 2 - 1) // EXPECT: 0

    // Max int & signed wrap around
    maxInt := 9223372036854775807 // 1<<63 -1
    minInt := -9223372036854775808 // -1<<63
    println(maxInt)   // EXPECT: 9223372036854775807
    println(minInt)   // EXPECT: -9223372036854775808
    println(maxInt+1) // EXPECT: -9223372036854775808
    println(minInt-1) // EXPECT: 9223372036854775807

    // Max byte & signed wrap around
    maxByte := toByte(127) // 1<<8 - 1
    minByte := toByte(-128) // -1<<8
    println(maxByte) // EXPECT: 127
    println(minByte) // EXPECT: -128
    println(toByte(maxByte+toByte(1))) // EXPECT: -128
    println(toByte(minByte-toByte(1))) // EXPECT: 127
}
