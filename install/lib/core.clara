fn toBinary(i: int) string {
    buf := NewByteBuffer(77) // 63 digits + 7, 2-byte separators
    digits := "01"
    sep := "Â·"
    for j in 63 .. 0 {
        n := 0
        mask := 1 << j
        if (i & mask) == mask {
            n = 1
        }
        buf.append(digits.byte(n))
        if j > 0 and j.mod(8) == 0 {
            buf.append(sep)
        }
    }
    return buf.toString()
}

